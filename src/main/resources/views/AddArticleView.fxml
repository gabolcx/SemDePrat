<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.AddArticleController" prefWidth="400.0" prefHeight="300.0">
    <children>
        <GridPane layoutX="50.0" layoutY="25.0" hgap="10" vgap="10">
            <Label text="Código Artículo:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="codigoArticuloField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Nombre Artículo:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="nombreArticuloField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Área Usuaria:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="areaUsuariaField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Stock Actual:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="stockActualField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="Unidad de Medida:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <TextField fx:id="unidadMedidaField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        </GridPane>

        <HBox spacing="10" layoutX="180.0" layoutY="250.0">
            <Button text="Guardar" onAction="#handleSaveArticle" styleClass="guardar-button" />
            <Button text="Borrar" onAction="#handleBorrar" styleClass="modificar-button" />
        </HBox>
    </children>
</AnchorPane>
