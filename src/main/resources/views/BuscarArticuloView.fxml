<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.BuscarArticuloController">
    <children>
        <VBox spacing="10" alignment="CENTER" prefWidth="400" prefHeight="250">

            <Label text="Buscar Artículo" styleClass="subtitle-label" />

            <HBox spacing="10" alignment="CENTER">
                <Label text="Código:" />
                <TextField fx:id="codigoArticuloField" />
            </HBox>

            <HBox spacing="10" alignment="CENTER">
                <Label text="Nombre:" />
                <TextField fx:id="nombreArticuloField" />
            </HBox>

            <Button text="Buscar" onAction="#handleBuscar" styleClass="button" />

        </VBox>
    </children>
</AnchorPane>
